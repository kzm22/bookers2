<%= render 'books/sidebar', book: @newbook %>
    <div class = "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class = "table table-hover table-inverse">
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %><br>
            <%= link_to @user.name, "/users/#{@user.id}" %></td>
            <td></td>
            <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit",edit_book_path(@book) %></td>
            <td><%= link_to "Destroy",book_path(@book),method: :delete, "data-confirm" => "本当に消しますか？"%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>