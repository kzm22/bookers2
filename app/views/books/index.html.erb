
  <%= render 'books/sidebar', book: @book %>
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <th colspan = "2"></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
            <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user get.profile_image(100,100)%>
              <%#= image_tag book.user get.profile_image(100,100) %>
            <% end %>
            </td>
            <td></td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
