
  <%= render 'books/sidebar', book: @book %>
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <th colspan = "2"></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td></td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
